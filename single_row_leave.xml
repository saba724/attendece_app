<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

<!--            <TextView-->
<!--                android:id="@+id/date_time_leave"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="38dp"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:hint="date_time :"-->
<!--                android:gravity="center"-->
<!--                android:textAlignment="center"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="18sp"-->
<!--                android:textStyle="bold" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Name :"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_leave"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="-40dp"
                android:hint="Name "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Start Date :"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/start_leave"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="-40dp"
                android:hint="Start Date "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="End Date :"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/end_leave"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="-40dp"
                android:hint="End Date "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Reason :"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/reason_leave"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="-40dp"
                android:hint="Reason "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_app"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/leave_round_btn_approved"
                android:text="approved"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_reject"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="190dp"
                android:text="reject"
                android:layout_marginTop="-40dp"
                android:textSize="20sp"
                android:background="@drawable/leave_round_btn_reject"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>